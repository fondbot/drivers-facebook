{
  "name": "fondbot/facebook",
  "description": "Facebook Messenger driver for FondBot",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Vladimir Yuldashev",
      "email": "vladimir@fondbot.com"
    },
    {
      "name": "Denis Golubkov",
      "email": "golubkovden@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.1",
    "fondbot/fondbot": "^1.0",
    "guzzlehttp/guzzle": "^6.2"
  },
  "require-dev": {
    "fzaninotto/faker": "^1.6",
    "mockery/mockery": "^0.9.9",
    "phpunit/phpunit": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "FondBot\\Drivers\\Facebook\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --stop-on-failure --no-coverage",
    "cs": "php-cs-fixer fix --allow-risky=yes"
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
